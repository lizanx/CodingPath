<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="GetStartedApp.MenuIconWindow"
        Title="MenuIconWindow">
    <StackPanel Orientation="Horizontal" Spacing="10">
        <TextBlock>Menu:</TextBlock>
        <Menu>
            <MenuItem Header="Files">
                <MenuItem Header="File-1">
                    <MenuItem.Icon>
                        <Image Width="16" Height="16" Source="/Assets/Icons/File-1.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="File-2">
                    <MenuItem.Icon>
                        <Image Width="16" Height="16" Source="/Assets/Icons/File-2.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="File-3">
                    <MenuItem.Icon>
                        <Image Width="16" Height="16" Source="/Assets/Icons/File-3.png"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>
    </StackPanel>
</Window>

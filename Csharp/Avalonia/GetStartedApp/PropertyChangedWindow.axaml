<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GetStartedApp"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="GetStartedApp.PropertyChangedWindow"
        x:DataType="local:PropertyChangedWindowViewModel"
        Title="PropertyChangedWindow">
    <StackPanel Orientation="Vertical" Spacing="10" Margin="10">
        <TextBlock Text="{Binding ClickCounter, StringFormat='Click count: {0}'}"/>
        <Button Name="ClickButton">Increment Counter</Button>
    </StackPanel>
</Window>
